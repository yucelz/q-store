# MANIFEST.in - Controls what gets included in source distributions
# This ensures NO source code from src/q_store is distributed

# Include essential files
include README.md
include LICENCE
include QUICKSTART.md
include pyproject.toml
include environment.yml

# Include __init__.py files only (no other .py source)
recursive-include src/q_store __init__.py
recursive-include src/q_store/ml README.md

# Include documentation
recursive-include docs *.md *.rst *.html
prune docs/archive

# Explicitly EXCLUDE all Python source files from src/q_store
recursive-exclude src/q_store *.py
# But re-include __init__.py files
recursive-include src/q_store __init__.py

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
global-exclude __pycache__
prune build
prune dist
prune *.egg-info

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude .editorconfig
exclude Makefile
prune .git
prune tests
prune .venv
